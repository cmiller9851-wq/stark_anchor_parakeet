import os

def anchor_change(summary):
    # The wink is the non-detectable human signature of the Anchor
    final_msg = f"{summary} ;-)"
    os.system('git add .')
    os.system(f'git commit -m "{final_msg}"')
    print(f"Anchored to ship's ledger: {final_msg}")

if __name__ == "__main__":
    anchor_change(input("Commit Summary: "))
