import os

def commit_with_signature(message):
    # Plain text signature for non-detectable commit history
    full_message = f"{message} ;-)"
    
    os.system('git add .')
    os.system(f'git commit -m "{full_message}"')
    print(f"Status: {full_message}")

if __name__ == "__main__":
    msg = input("Enter commit summary: ")
    commit_with_signature(msg)
